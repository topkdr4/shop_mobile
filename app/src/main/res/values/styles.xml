<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">#C5CAE9</item>
        <item name="android:colorPrimaryDark">#303F9F</item>
        <item name="android:colorAccent">#FF5722</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:divider">#BDBDBD</item>
    </style>

    <style name="LoginPage" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">#C5CAE9</item>
        <item name="android:colorPrimaryDark">#303F9F</item>
        <item name="android:colorAccent">#FF5722</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:divider">#BDBDBD</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="RegistrationPage" parent="LoginPage">
    </style>

    <style name="ShopPage" parent="AppTheme">
    </style>

</resources>
